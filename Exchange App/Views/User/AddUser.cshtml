@model Exchange_App.DAL.Entities.User
@{
    ViewData["Title"] = "AddUser";
}

<form asp-action="CreateUser" method="post" class="form-horizontal">

    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-5">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label">Surname</label>
        <div class="col-sm-5">
            <input asp-for="Surname" class="form-control" placeholder="Surname">
            <span asp-validation-for="Surname" />
        </div>
    </div>

    <div class="form-group">
        <div class=" col-sm-2">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>